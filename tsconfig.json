{
    "compileOnSave": true,
    "include": ["./packages/**/*"],
    "compilerOptions": {
        "jsx": "react",
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "Node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedLocals": false,     // todo true
        "noUnusedParameters": false, // todo true
        "noImplicitReturns": false,
        "skipLibCheck": true,
        "baseUrl": "./packages",
        "paths": {
            "hostConfig": ["./react-dom/src/hostConfig"],
        },
    }
}